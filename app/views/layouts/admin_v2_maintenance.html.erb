<!DOCTYPE html>
<html>
<head name="viewport" content="width=device-width, initial-scale=1">
    <title><%= GogglesCore::AppConstants::WEB_APP_NAME %> -- <%= t('admin_index.title') %></title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body>
    <!-- Main menu section: -->
    <%= render( partial: 'admin/v2/maintenance/main_menu' ) %>

    <!-- Body canvas: -->
    <div id="intenal-canvas" class="canvas">
        <!-- Clickable menu icon-bars: -->
        <div class="navbar navbar-default navbar-fixed-top">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="offcanvas" data-target=".navmenu" data-canvas="body">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
        </div>

        <!-- Main Container: -->
        <div class="container">
            <div class="col-xs-12">
                <div class="col-xs-offset-6 col-xs-6 text-center">
                    <%= render_navigation( renderer: :breadcrumbs, prefix: I18n.t(:you_are_here) +'&nbsp;', join_with: " &gt; " ) %>
                </div>
            </div>

            <!-- Alerts & error messages -->
            <div class="col-xs-12">
                <% if notice || flash[:info] %>
                    <div class="alert alert-info" role="alert">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <%= notice || flash[:info] %>
                    </div>
                <% end %>
                <% if flash[:warning] %>
                    <div class="alert alert-warning" role="alert">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <%= flash[:warning] %>
                    </div>
                <% end %>
                <% if alert %>
                    <div class="media alert alert-warning">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <div class="media-left">
                            <%= image_tag( "mmh.jpg", size: '180x135' ) %>
                        </div>
                        <div class="media-body">
                            <h4 class="media-heading">Mmmh...</h4>
                            <%= alert %>
                        </div>
                    </div>
                <% end %>
                <% if flash[:error] %>
                    <div class="alert alert-danger" role="alert">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <h4>Oh no!</h4>
                        <%= flash[:error] %>
                    </div>
                <% end %>
            </div>

            <!-- Actual body content -->
            <div class="col-xs-12">
                <%= yield %>
            </div>

        </div>
    </div>
</body>
</html>
