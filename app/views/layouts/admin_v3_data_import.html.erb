<!DOCTYPE html>
<html>
<head>
  <title><%= AGEX_APP_NAME %> -- <%= t('admin_import.title') %></title>
  <%= netzke_init %>

  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
    <!-- Main menu section: -->
    <%= render( partial: 'admin/v3/data_import/main_menu' ) %>

    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <!--Body content-->
                <% if notice || flash[:info] %>
                    <div class="alert alert-info">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <%= notice || flash[:info] %>
                    </div>
                <% end %>
                <% if flash[:warning] %>
                    <div class="alert alert-block">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <%= flash[:warning] %>
                    </div>
                <% end %>
                <% if alert %>
                    <div class="alert alert-block">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <h4>Mmmh...</h4>
                        <%= alert %>
                    </div>
                <% end %>
                <% if flash[:error] %>
                    <div class="alert alert-error">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <h4>Oh no!</h4>
                        <%= flash[:error] %>
                    </div>
                <% end %>

                <%= yield %>
            </div>
        </div>
    </div>
</body>
</html>
